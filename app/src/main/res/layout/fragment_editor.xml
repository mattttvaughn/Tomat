<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/resting_background_gradient"
    tools:context=".features.pomodoro.PomodoroFragment">

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="@dimen/top_level_icon"
        android:layout_height="@dimen/top_level_icon"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/margin_normal"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        android:alpha="0.7"
        android:tint="@color/iconPrimary" />

    <TextView
        android:id="@+id/timer_text"
        android:fontFamily="@font/lato_black"
        android:textSize="32sp"
        android:textColor="@color/textPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="25:00"/>

</FrameLayout>
